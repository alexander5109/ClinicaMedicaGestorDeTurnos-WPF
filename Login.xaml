<Window x:Class="ClinicaMedica.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicaMedica"
        mc:Ignorable="d" MinHeight="600" MinWidth="1024"
        Title="Clinica Medica - Login" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600" MaxHeight="400" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Icon="images/icono.png" WindowStartupLocation="CenterScreen">
	<Grid VerticalAlignment="Center" Height="600" Width="1024" HorizontalAlignment="Center">
		<Grid.Background>
			<ImageBrush ImageSource="/images/doctor.jpg"/>
		</Grid.Background>
		<TextBox x:Name="labelServidor" HorizontalAlignment="Left" Margin="422,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="24" TextAlignment="Center" FontSize="16"/>
		<TextBox x:Name="labelUsuario" HorizontalAlignment="Left" Margin="422,294,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="24" TextAlignment="Center" FontSize="16"/>
		<TextBox x:Name="labelPassword" HorizontalAlignment="Left" Margin="422,362,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="24" TextAlignment="Center" FontSize="16"/>
		<TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Height="43" Width="346" FontSize="24" FontFamily="Segoe UI Variable Text Semibold" Margin="0,42,0,0" Background="#FFE7F0FB" Foreground="Black"><Run Language="es-ar" Text="Iniciar sesion"/></TextBlock>
		<TextBlock Margin="488,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Height="24" FontSize="16" HorizontalAlignment="Left" FontFamily="Bahnschrift Light"><Run Language="es-ar" Text="Servidor"/></TextBlock>
		<TextBlock Margin="491,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Height="24" FontSize="16" HorizontalAlignment="Left" FontFamily="Bahnschrift Light"><Run Language="es-ar" Text="Usuario"/></TextBlock>
		<Button x:Name="iniciarSesionButton" Content="Iniciar sesión" HorizontalAlignment="Left" Margin="433,479,0,0" VerticalAlignment="Top" Height="32" Style="{StaticResource BotonRedondeado}" Width="154" Click="MetodoBotonIniciarSesion" FontSize="12" Background="#FF7FC7FA" IsDefault="True" Cursor="Hand" FontFamily="SachaWynterTight"/>
		<Button Content="SALIR" Style="{StaticResource BotonRedondeado}" HorizontalAlignment="Left" Margin="35,525,0,0" VerticalAlignment="Top" Height="32" Width="87" Background="#FFCDE6FA" BorderBrush="Black" Click="MetodoBotonSalir" FontFamily="Baskerville Old Face" FontSize="20"/>
		<Button Content="Cancelar" Style="{StaticResource BotonRedondeado}" HorizontalAlignment="Left" Margin="35,468,0,0" VerticalAlignment="Top" Height="32" Width="88" Background="#FFCDE6FA" BorderBrush="Black" Click="MetodoBotonCancelar" FontFamily="Baskerville Old Face" FontSize="20"/>
		<TextBlock Margin="0,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Height="24" FontSize="18" HorizontalAlignment="Center" FontFamily="Bahnschrift Light"><Run Language="es-ar" Text="Elija motor de la Base de Datos"/></TextBlock>
		<TextBlock Margin="478,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Height="24" FontSize="16" HorizontalAlignment="Left" FontFamily="Bahnschrift Light"><Run Text="Contraseñ"/><Run Language="es-es" Text="a"/></TextBlock>
		<RadioButton Content="Modo SQL" IsChecked="true" HorizontalAlignment="Left" Margin="411,162,0,0" VerticalAlignment="Top" FontSize="16" Checked="radioButtonSQLChecked"/>
		<RadioButton Content="Modo Json" HorizontalAlignment="Left" Margin="541,162,0,0" VerticalAlignment="Top" FontSize="16" Checked="radioButtonJSONChecked"/>

	</Grid>
</Window>
