<Window x:Class="ClinicaMedica.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicaMedica"
        mc:Ignorable="d" MinHeight="400" MinWidth="600"
        Title="Clinica Medica - Login" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600" MaxHeight="400" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Icon="images/icono.png" >
	<Grid VerticalAlignment="Center" Height="400" Width="600" HorizontalAlignment="Center">
		<Grid.Background>
			<ImageBrush ImageSource="/images/doctor.jpg"/>
		</Grid.Background>
		<TextBox x:Name="label_user" HorizontalAlignment="Left" Margin="199,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="24" TextAlignment="Center" FontSize="16"/>
		<TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Height="43" Width="346" FontSize="24" FontFamily="Segoe UI Variable Text Semibold" Margin="0,42,0,0" Background="#FFE7F0FB" Foreground="Black"><Run Language="es-ar" Text="Iniciar sesion"/></TextBlock>
		<TextBlock Margin="0,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Height="24" FontSize="16" HorizontalAlignment="Center" Text="Usuario " FontFamily="Bahnschrift Light"/>
		<TextBlock Margin="255,246,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Height="24" FontSize="16" HorizontalAlignment="Left" FontFamily="Bahnschrift Light"><Run Text="Contraseñ"/><Run Language="es-es" Text="a"/></TextBlock>
		<TextBox x:Name="label_pass" HorizontalAlignment="Left" Margin="199,267,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="24" TextAlignment="Center" FontSize="16"/>
		<Button x:Name="iniciarSesionButton" Content="Iniciar sesión" HorizontalAlignment="Center" Margin="0,325,0,0" VerticalAlignment="Top" Height="32" Width="154" Click="MetodoBotonIniciarSesion" FontSize="12" Background="#FF7FC7FA" IsDefault="True" Cursor="Hand" FontFamily="SachaWynterTight"/>
		<Button Content="SALIR" HorizontalAlignment="Left" Margin="488,341,0,0" VerticalAlignment="Top" Height="32" Width="87" Background="#FFCDE6FA" BorderBrush="Black" Click="MetodoBotonSalir"/>
		<Button Content="Cancelar" HorizontalAlignment="Left" Margin="48,341,0,0" VerticalAlignment="Top" Height="32" Width="88" Background="#FFCDE6FA" BorderBrush="Black" Click="MetodoBotonCancelar"/>

	</Grid>
</Window>
