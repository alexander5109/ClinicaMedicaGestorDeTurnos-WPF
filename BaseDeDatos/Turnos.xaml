<Window x:Class="ClinicaMedica.Turnos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicaMedica"
        mc:Ignorable="d"
        Title="Clinica Medica - Turnos"
        Height="600"
        Width="1024"
        Icon="../images/icono.png"
        Activated="Window_Activated"
        WindowStartupLocation="CenterScreen">

	<Window.Resources>
	</Window.Resources>

	<Grid>
		<Grid.Background>
			<ImageBrush ImageSource="/images/otroFondo.png"/>
		</Grid.Background>

		<Calendar x:Name="CalendarioTurnos"
                          HorizontalAlignment="Left"
                          Margin="476,386,0,0"
                          VerticalAlignment="Top"
                          SelectedDatesChanged="CalendarioTurnos_SelectedDatesChanged"/>

		<ListView x:Name="turnosListView"
					Style="{StaticResource ListViewLindo2}"
                          d:ItemsSource="{d:SampleData ItemCount=5}"
                          Margin="675,43,32,30"
                          SelectionChanged="listViewTurnos_SelectionChanged">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Número"
                                                        DisplayMemberBinding="{Binding Id}"
                                                        Width="auto"/>
					<GridViewColumn Header="Fecha"
                                                        DisplayMemberBinding="{Binding Fecha}"
                                                        Width="auto"/>
					<GridViewColumn Header="Hora"
                                                        DisplayMemberBinding="{Binding Hora}"
                                                        Width="auto"/>
				</GridView>
			</ListView.View>
		</ListView>

		<Button Content="Home"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Height="37"
                        Width="170"
                        Click="ButtonHome"
                        FontSize="20"
                        Style="{StaticResource BotonRedondeado}"
                        FontWeight="Bold"
                        BorderBrush="#FF0E0D0D"
                        Margin="55,449,0,0"
                        FontFamily="Baskerville Old Face">
		</Button>

		<Button Content="Salir"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Height="37"
                        Width="170"
                        Click="ButtonSalir"
                        FontSize="20"
                        Style="{StaticResource BotonRedondeado}"
                        FontWeight="Bold"
                        BorderBrush="#FF0E0D0D"
                        Margin="55,504,0,0"
                        FontFamily="Baskerville Old Face">
		</Button>

		<Button Content="Agregar nuevo"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Height="37"
                        Width="170"
                        Click="ButtonAgregar"
                        FontSize="20"
                        Style="{StaticResource BotonRedondeado}"
                        FontWeight="Bold"
                        BorderBrush="#FF0E0D0D"
                        Margin="265,504,0,0"
                        FontFamily="Baskerville Old Face">
		</Button>

		<Button x:Name="buttonModificar"
                        Content="Modificar turno"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Height="37"
                        Width="170"
                        Click="ButtonModificar"
                        FontSize="20"
                        Style="{StaticResource BotonRedondeado}"
                        FontWeight="Bold"
                        BorderBrush="#FF0E0D0D"
                        Margin="265,449,0,0"
                        FontFamily="Baskerville Old Face"
                        IsEnabled="False">
		</Button>

		<Label Content="Turnos"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontSize="72"
                       Height="125"
                       Width="374"
                       FontFamily="Ringbearer"
                       Margin="55,43,0,0"
                       FontWeight="Bold"/>






		<ListView x:Name="medicosListView"
					Width="Auto"
					Height="Auto"
					Margin="315,92,357,430"
					Style="{StaticResource ListViewLindo2}"
					SelectionChanged="medicosListView_SelectionChanged"
					Background="#A5FFFFFF"
					BorderBrush="#72828790">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Dni"
								DisplayMemberBinding="{Binding Dni}"
								Width="auto"/>
					<GridViewColumn Header="Nombre"
								DisplayMemberBinding="{Binding Name}"
								Width="auto"/>
					<GridViewColumn Header="Apellido"
								DisplayMemberBinding="{Binding LastName}"
								Width="auto"/>
					<GridViewColumn Header="Especialidad"
								DisplayMemberBinding="{Binding Especialidad}"
								Width="auto"/>
				</GridView>
			</ListView.View>
		</ListView>





		<ListView x:Name="pacientesListView"
			  ItemsSource="{Binding PacientesList}"
			  Width="Auto"
			  Height="Auto"
					Style="{StaticResource ListViewLindo2}"
			  Margin="205,260,369,260"
			  SelectionChanged="pacientesListView_SelectionChanged"
			  d:ItemsSource="{d:SampleData ItemCount=5}"
			>
			<ListView.View>
				<GridView>
					<!-- Dni Column -->
					<GridViewColumn Header="Dni"
				  DisplayMemberBinding="{Binding Dni}"
				  Width="auto"/>
					<!-- Name Column -->
					<GridViewColumn Header="Nombre"
				  DisplayMemberBinding="{Binding Name}"
				  Width="auto"/>

					<GridViewColumn Header="Apellido"
				  DisplayMemberBinding="{Binding LastName}"
				  Width="auto"/>

					<GridViewColumn Header="Email"
				  DisplayMemberBinding="{Binding Email}"
				  Width="auto"/>

					<GridViewColumn Header="Teléfono"
				  DisplayMemberBinding="{Binding Telefono}"
				  Width="auto"/>

				</GridView>
			</ListView.View>
		</ListView>
		<Label Content="Medico"
	  HorizontalAlignment="Left"
	  VerticalAlignment="Top"
	  FontSize="25"
	  FontFamily="Ringbearer"
	  Margin="434,43,0,0"
	  FontWeight="Bold"/>
		<Label Content="Paciente"
	  HorizontalAlignment="Left"
	  VerticalAlignment="Top"
	  FontSize="25"
	  FontFamily="Ringbearer"
	  Margin="432,211,0,0"
	  FontWeight="Bold"/>
	</Grid>
</Window>
