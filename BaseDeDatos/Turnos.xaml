<Window x:Class="ClinicaMedica.Turnos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicaMedica"
        mc:Ignorable="d"
        Title="Clinica Medica - Turnos"
        Height="600"
        Width="1024"
        Icon="../images/icono.png"
        Activated="Window_Activated"
        WindowStartupLocation="CenterScreen">

	<Window.Resources>
	</Window.Resources>

	<Grid>
		<Grid.Background>
			<ImageBrush ImageSource="/images/otroFondo.png"/>
		</Grid.Background>

		<ContentControl Style="{StaticResource ContentControlLindo}" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="15,104,0,0" Height="205" Width="210">
			<Calendar x:Name="CalendarioTurnos"
                          HorizontalAlignment="Center"
					  Background="Transparent"
					  BorderThickness="10"
                          VerticalAlignment="Center"
                          SelectedDatesChanged="CalendarioTurnos_SelectedDatesChanged">
				<Calendar.BorderBrush>
					<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
						<GradientStop Color="#FFA3AEB9"/>
						<GradientStop Color="#FF8399A9" Offset="0.375"/>
						<GradientStop Color="#FF718597" Offset="0.375"/>
						<GradientStop Color="#00617584" Offset="1"/>
					</LinearGradientBrush>
				</Calendar.BorderBrush>
			</Calendar>
		</ContentControl>

		<ContentControl Style="{StaticResource ContentControlLindo}" Margin="675,94,32,30">
			<ListView x:Name="turnosListView"
						 d:ItemsSource="{d:SampleData ItemCount=5}"
					  Background="Transparent"
					  BorderThickness="0"
							 
						SelectionChanged="listViewTurnos_SelectionChanged">
				<ListView.View>
					<GridView>
						<GridViewColumn Header="Número"
															DisplayMemberBinding="{Binding Id}"
															Width="auto"/>
						<GridViewColumn Header="Fecha"
															DisplayMemberBinding="{Binding Fecha}"
															Width="auto"/>
						<GridViewColumn Header="Hora"
															DisplayMemberBinding="{Binding Hora}"
															Width="auto"/>
					</GridView>
				</ListView.View>
			</ListView>
		</ContentControl>

		<Button Content="Home"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Height="37"
                        Width="170"
                        Click="ButtonHome"
                        FontSize="20"
                        Style="{StaticResource BotonRedondeado}"
                        FontWeight="Bold"
                        BorderBrush="#FF0E0D0D"
                        Margin="55,449,0,0"
                        FontFamily="Baskerville Old Face">
		</Button>

		<Button Content="Salir"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Height="37"
                        Width="170"
                        Click="ButtonSalir"
                        FontSize="20"
                        Style="{StaticResource BotonRedondeado}"
                        FontWeight="Bold"
                        BorderBrush="#FF0E0D0D"
                        Margin="55,504,0,0"
                        FontFamily="Baskerville Old Face">
		</Button>

		<Button Content="Agregar nuevo"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Height="37"
                        Width="170"
                        Click="ButtonAgregar"
                        FontSize="20"
                        Style="{StaticResource BotonRedondeado}"
                        FontWeight="Bold"
                        BorderBrush="#FF0E0D0D"
                        Margin="265,504,0,0"
                        FontFamily="Baskerville Old Face">
		</Button>

		<Button x:Name="buttonModificar"
                        Content="Modificar turno"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Height="37"
                        Width="170"
                        Click="ButtonModificar"
                        FontSize="20"
                        Style="{StaticResource BotonRedondeado}"
                        FontWeight="Bold"
                        BorderBrush="#FF0E0D0D"
                        Margin="265,449,0,0"
                        FontFamily="Baskerville Old Face"
                        IsEnabled="False">
		</Button>

		<Label Content="Turnos"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontSize="72"
                       Height="125"
                       Width="374"
                       FontFamily="Ringbearer"
                       Margin="675,0,0,0"
                       FontWeight="Bold"/>





		<ContentControl Style="{StaticResource ContentControlLindo}" Margin="257,104,592,206">
			<!-- <Expander Header="Información del Médico" IsExpanded="True" Background="Transparent" BorderThickness="0"> -->
			<StackPanel Orientation="Vertical" Background="Transparent">
			
				
				
				<TextBlock Text="DNI:" FontWeight="Bold" Margin="0,5,0,5" />
				<TextBlock x:Name="txtMedicoDni" Margin="0,0,0,10" />

				<TextBlock Text="Nombre:" FontWeight="Bold" Margin="0,5,0,5" />
				<TextBlock x:Name="txtMedicoNombre" Margin="0,0,0,10" />

				<TextBlock Text="Apellido:" FontWeight="Bold" Margin="0,5,0,5" />
				<TextBlock x:Name="txtMedicoApellido" Margin="0,0,0,10" />

				<TextBlock Text="Especialidad:" FontWeight="Bold" Margin="0,5,0,5" />
				<TextBlock x:Name="txtMedicoEspecialidad" Margin="0,0,0,10" />
			</StackPanel>
			<!-- </Expander> -->
		</ContentControl>





		<ContentControl Style="{StaticResource ContentControlLindo}" Margin="461,101,364,170">
			<!-- <Expander Header="Información del Paciente" IsExpanded="True" Background="Transparent" BorderThickness="0"> -->
			<StackPanel Orientation="Vertical" Background="Transparent">
				<TextBlock Text="DNI:" FontWeight="Bold" Margin="0,5,0,5" />
				<TextBlock x:Name="txtPacienteDni" Margin="0,0,0,10" />

				<TextBlock Text="Nombre:" FontWeight="Bold" Margin="0,5,0,5" />
				<TextBlock x:Name="txtPacienteNombre" Margin="0,0,0,10" />

				<TextBlock Text="Apellido:" FontWeight="Bold" Margin="0,5,0,5" />
				<TextBlock x:Name="txtPacienteApellido" Margin="0,0,0,10" />

				<TextBlock Text="Correo:" FontWeight="Bold" Margin="0,5,0,5" />
				<TextBlock x:Name="txtPacienteEmail" Margin="0,0,0,10" />

				<TextBlock Text="Telefono:" FontWeight="Bold" Margin="0,5,0,5" />
				<TextBlock x:Name="txtPacienteTelefono" Margin="0,0,0,10" />
			</StackPanel>
			<!-- </Expander> -->
		</ContentControl>









		<Label Content="Medico"
	  HorizontalAlignment="Left"
	  VerticalAlignment="Top"
	  FontSize="25"
	  FontFamily="Ringbearer"
	  Margin="296,62,0,0"
	  FontWeight="Bold"/>
		<Label Content="Paciente"
	  HorizontalAlignment="Left"
	  VerticalAlignment="Top"
	  FontSize="25"
	  FontFamily="Ringbearer"
	  Margin="500,62,0,0"
	  FontWeight="Bold"/>
	</Grid>
</Window>
