<Window x:Class="ClinicaMedica.Turnos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicaMedica"
        mc:Ignorable="d"
        Title="Clinica Medica - Turnos"
		Height="600"
		Width="1024"
		Icon="../images/icono.png"
		Activated="Window_Activated"
		WindowStartupLocation="CenterScreen">


	<Grid>
		<Grid.Background>
			<ImageBrush ImageSource="/images/turnos.png"/>
		</Grid.Background>
		<Calendar x:Name="CalendarioTurnos" HorizontalAlignment="Left" Margin="802,336,0,0" VerticalAlignment="Top" SelectedDatesChanged="CalendarioTurnos_SelectedDatesChanged"/>
		<ListView x:Name="turnosListView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="581,10,10,384" SelectionChanged="listViewTurnos_SelectionChanged">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Numero" DisplayMemberBinding="{Binding TurnoID}" Width="auto"/>
					<GridViewColumn Header="Paciente" DisplayMemberBinding="{Binding Paciente}" Width="auto"/>
					<GridViewColumn Header="Medico" DisplayMemberBinding="{Binding Medico}" Width="auto"/>
					<GridViewColumn Header="FechaHora" DisplayMemberBinding="{Binding FechaHora}" Width="auto"/>
				</GridView>
			</ListView.View>
		</ListView>
		<Button x:Name="buttonModificar" IsEnabled="false" FontSize="24" Content="Modificar Seleccionado" HorizontalAlignment="Left" Height="38" Margin="320,500,0,0" VerticalAlignment="Top" Width="209" Click="ButtonModificar" RenderTransformOrigin="0.546,3.469" BorderBrush="Black" Background="White" FontFamily="Agency FB"/>
		<Button FontSize="24" Content="Salir" HorizontalAlignment="Left" Height="33" Margin="80,502,0,0" VerticalAlignment="Top" Width="145" Click="ButtonSalir" RenderTransformOrigin="0.546,3.469" BorderBrush="Black" Background="White" FontFamily="Agency FB"/>
		<Button FontSize="24" Content="Home" HorizontalAlignment="Left" Height="38" Margin="80,438,0,0" VerticalAlignment="Top" Width="145" Click="ButtonHome" RenderTransformOrigin="0.546,3.469" BorderBrush="Black" Background="White" FontFamily="Agency FB"/>
		<Button FontSize="24" Content="Agregar nuevo" HorizontalAlignment="Left" Height="38" Margin="320,436,0,0" VerticalAlignment="Top" Width="209" Click="ButtonAgregar" RenderTransformOrigin="0.546,3.469" BorderBrush="Black" Background="White" FontFamily="Agency FB"/>

	</Grid>
</Window>
