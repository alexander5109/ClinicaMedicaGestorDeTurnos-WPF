<Window x:Class="ClinicaMedica.TurnosModificar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicaMedica"
        mc:Ignorable="d"
        Title="Clinica Medica - Turnos Agregar" Height="450" Width="800" Icon="../images/icono.png" WindowStartupLocation="CenterScreen" Padding="10,10,10,10">
	<Grid>
		<Label Content="Turno " HorizontalAlignment="Left" Margin="344,10,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Matura MT Script Capitals" Foreground="#FF03050A"/>
		<Label Content="Paciente" HorizontalAlignment="Left" Margin="183,176,0,0" VerticalAlignment="Top" Height="33" Width="128" FontSize="14" Foreground="Black" FontWeight="Bold"/>
		<Label Content="Médico" HorizontalAlignment="Left" Margin="183,228,0,0" VerticalAlignment="Top" Height="33" Width="128" FontSize="14" Foreground="Black" FontWeight="Bold"/>
		<Label Content="Fecha" HorizontalAlignment="Left" Margin="183,276,0,0" VerticalAlignment="Top" Height="33" Width="128" FontSize="14" Foreground="Black" FontWeight="Bold"/>
		<DatePicker x:Name="txtFecha" 
            HorizontalAlignment="Left" 
            Margin="333,276,0,0" 
            VerticalAlignment="Top" 
            Width="182" 
            Height="33"/>
		<Label Content="ID Turno" HorizontalAlignment="Left" Margin="183,84,0,0" VerticalAlignment="Top" Height="33" Width="128" FontSize="14" Foreground="Black" FontWeight="Bold"/>
		<Button FontSize="20"
	  Content="Volver"
	  Style="{StaticResource BotonRedondeado}" 
	  HorizontalAlignment="Left"
	  Height="38"
	  VerticalAlignment="Top"
	  Width="144"
	  BorderBrush="Black"
	  Background="White"
	  Click="ButtonCancelar"
	  FontFamily="Baskerville Old Face"
	  Margin="605,334,0,0" Padding="30,30,30,30"/>
		<Button x:Name="botonMultiUso" FontSize="20"
	  Content="Guardar cambios"
	  HorizontalAlignment="Left"
	  Height="37"
	  VerticalAlignment="Top"
	  Style="{StaticResource BotonRedondeado}" 
	  Width="144"
	  FontFamily="Baskerville Old Face"
	  Margin="605,207,0,0" Click="ButtonGuardar"/>
		<Button x:Name="buttonEliminar" Style="{StaticResource BotonRedondeado}" FontSize="20" Content="Eliminar turno" HorizontalAlignment="Left" Height="38" Margin="605,271,0,0" VerticalAlignment="Top" Width="144" Click="ButtonEliminar" BorderBrush="Black" Background="White" FontFamily="Baskerville Old Face"/>
		<Label Content="Hora" HorizontalAlignment="Left" Margin="183,333,0,0" VerticalAlignment="Top" Height="33" Width="128" FontSize="14" Foreground="Black" FontWeight="Bold"/>
		<TextBox x:Name="txtHora" HorizontalAlignment="Left" Margin="333,333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Height="33"/>
		<ComboBox x:Name="txtPacientes" HorizontalAlignment="Left" Margin="333,176,0,0" VerticalAlignment="Top" Width="182" Height="33"/>
		<Label x:Name="txtTurnoId" Content="ID Turno" HorizontalAlignment="Left" Margin="333,84,0,0" VerticalAlignment="Top" Height="33" Width="182" FontSize="14" Foreground="Black" FontWeight="Bold" Background="#FFECECEC"/>
		<Label Content="Especialidad" HorizontalAlignment="Left" Margin="183,129,0,0" VerticalAlignment="Top" Height="33" Width="128" FontSize="14" Foreground="Black" FontWeight="Bold"/>
		<ComboBox x:Name="txtEspecialidades" HorizontalAlignment="Left" Margin="333,129,0,0" VerticalAlignment="Top" Width="182" Height="33"/>
		<ComboBox x:Name="txtMedicos" HorizontalAlignment="Left" Margin="333,228,0,0" VerticalAlignment="Top" Width="182" Height="33"/>
	</Grid>
	<Window.Background>
		<ImageBrush ImageSource="/images/otroFondo.png" />
	</Window.Background>
</Window>
