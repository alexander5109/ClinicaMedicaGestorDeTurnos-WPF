        <Button Content="PACIENTES" HorizontalAlignment="Center" Margin="0,157,0,0" VerticalAlignment="Top" Height="29" Width="152" Background="White" BorderBrush="Black" Click="MetodoBotonPacientes"/>
        <Button Content="MÉDICOS" HorizontalAlignment="Center" Margin="0,102,0,0" VerticalAlignment="Top" Height="29" Width="152" Background="White" BorderBrush="Black" Click="MetodoBotonMedicos"/>

    </Grid>

</Window>
