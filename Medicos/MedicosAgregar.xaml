<Window x:Class="ClinicaMedica.MedicosAgregar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClinicaMedica"
        mc:Ignorable="d"
        Title="MedicosAgregar" Height="600" Width="1024">

	<Window.Background>
		<ImageBrush ImageSource="/images/MedicosFondo.jpg" />
	</Window.Background>


	<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.86">
		<Label Content="Agregar nuevo Medico" HorizontalAlignment="Left" Margin="57,22,0,0" VerticalAlignment="Top" FontSize="32" FontFamily="Segoe UI Black" Height="120" Width="428"/>

		<Grid Margin="415,22,0,13">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<!-- Columna para los Labels -->
				<ColumnDefinition Width="*"/>
				<!-- Columna para los TextBox -->
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<Label Content="Nombre" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Margin="109,5,0,5" Width="54"/>
			<TextBox Grid.Row="0" Grid.Column="1" Width="Auto" Margin="5,5,5,5"/>

			<Label Content="Apellido" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="109,5,0,5" Width="54"/>
			<TextBox Grid.Row="1" Grid.Column="1" Width="Auto" Margin="5,5,5,5"/>

			<Label Content="DNI" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Margin="132,5,0,5" Width="31"/>
			<TextBox Grid.Row="2" Grid.Column="1" Width="Auto" Margin="5,5,5,5"/>

			<Label Content="Provincia" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" Margin="105,5,0,5" Width="58"/>
			<TextBox Grid.Row="3" Grid.Column="1" Width="Auto" Margin="5,5,5,5"/>

			<Label Content="Domicilio" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" Margin="103,5,0,5" Width="60"/>
			<TextBox Grid.Row="4" Grid.Column="1" Width="Auto" Margin="5,5,5,5"/>

			<Label Content="Localidad" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" Margin="102,5,0,5" Width="61"/>
			<TextBox Grid.Row="5" Grid.Column="1" Width="Auto" Margin="5,5,5,5"/>

			<Label Content="Especialidad" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Left" Margin="88,5,0,5" Width="75"/>
			<TextBox Grid.Row="6" Grid.Column="1" Width="Auto" Margin="5,5,5,5"/>

			<Label Content="Sueldo Minimo Garantizado" Grid.Row="7" HorizontalAlignment="Center" Margin="0,5,0,5" Width="158"/>
			<TextBox Grid.Row="7" Grid.Column="1" Width="Auto" Margin="5,5,5,5"/>

			<Label Content="Fecha de Ingreso" Grid.Row="8" HorizontalAlignment="Center" Margin="0,5,0,5" Width="158"/>
			<DatePicker Grid.Row="8" Grid.Column="1" x:Name="datePickerFechaIngreso" Margin="5,5,5,5"/>

			<Label Content="Realiza Guardia" Grid.Row="9" HorizontalAlignment="Center" Margin="0,5,0,5" Width="92"/>
			<CheckBox Grid.Row="9" Grid.Column="1" HorizontalAlignment="Center" Margin="5,5,5,5" Width="16"/>

			<Label Content="Dia de Atención" Grid.Row="10" Grid.Column="0" HorizontalAlignment="Left" Margin="68,5,0,5" Width="95"/>
			<StackPanel Grid.Row="10" Grid.Column="1" Width="Auto" >

				<Label Content="Lunes" HorizontalAlignment="Center" Margin="0,5,0,5" Width="92"/>
				<CheckBox HorizontalAlignment="Center" Margin="5,5,5,5" Width="16"/>


				<Label Content="Martes" HorizontalAlignment="Center" Margin="0,5,0,5" Width="92"/>
				<CheckBox HorizontalAlignment="Center" Margin="5,5,5,5" Width="16"/>
				<!-- <DatePicker x:Name="datePickerDiasAtencion" Margin="0,0,0,10"/> -->
				<!-- <Button Content="Agregar Día de Atención" Click="AgregarDiaAtencion_Click" Margin="0,0,0,10"/> -->
				<!-- <Button Content="Eliminar Día Seleccionado" Click="EliminarDiaAtencion_Click" Margin="0,0,0,10"/> -->
				<!-- <TextBlock Text="Días de atención seleccionados:" Margin="0,0,0,10"/> -->
				<!-- <ListBox x:Name="listBoxDiasAtencion" Margin="0,0,0,10" Height="100"/> -->
			</StackPanel>
		</Grid>
		<Button FontSize="24" Content="Salir" HorizontalAlignment="Left" Height="60" Margin="237,464,0,0" VerticalAlignment="Top" Width="109" Click="ButtonSalir" RenderTransformOrigin="0.546,3.469" BorderBrush="Black" Background="White" FontFamily="Agency FB"/>
		<Button FontSize="24" Content="Cancelar" HorizontalAlignment="Left" Height="62" Margin="237,396,0,0" VerticalAlignment="Top" Width="109" Click="ButtonCancelar" RenderTransformOrigin="0.546,3.469" BorderBrush="Black" Background="White" FontFamily="Agency FB"/>
		<Button FontSize="24" Content="Agregar" HorizontalAlignment="Left" Height="62" Margin="236,326,0,0" VerticalAlignment="Top" Width="110" Click="ButtonAgregar" RenderTransformOrigin="0.546,3.469" BorderBrush="Black" Background="White" FontFamily="Agency FB"/>



