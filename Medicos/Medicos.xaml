<Window x:Class="ClinicaMedica.Medicos"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ClinicaMedica"
		mc:Ignorable="d"
		Title="Clinica Medica - Medicos"
		Height="600"
		Width="1024"
		Icon="../images/icono.png"
		Activated="Window_Activated"
		WindowStartupLocation="CenterScreen">

	<Grid HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch">


		<Grid.Background>
			<ImageBrush ImageSource="/images/doctor.jpg"/>
		</Grid.Background>



		<Grid.RowDefinitions>
			<RowDefinition Height="32*"/>
			<RowDefinition Height="263*"/>
		</Grid.RowDefinitions>
		<!-- Título -->
		<Label Content="Personal Médico"
				HorizontalAlignment="Center"
				VerticalAlignment="Top"
				FontSize="36"
				Height="59"
				Width="338"
				FontFamily="Segoe UI Black"/>
		<ListView Name="MedicoListView"
				  ItemsSource="{Binding MedicosList}"
				  Width="Auto"
				  Height="Auto"
				Margin="10,10,328,140"
				Grid.Row="1"
				SelectionChanged="MedicoListView_SelectionChanged">
			<ListView.View>
				<GridView>
					<!-- Dni Column -->
					<GridViewColumn Header="Dni"
							DisplayMemberBinding="{Binding Dni}"
							Width="auto"/>
					<!-- Name Column -->
					<GridViewColumn Header="Name"
							DisplayMemberBinding="{Binding Name}"
							Width="auto"/>
					<!-- Lastname Column -->
					<GridViewColumn Header="LastName"
							DisplayMemberBinding="{Binding LastName}"
							Width="auto"/>
					<!-- Especialidad Column -->
					<GridViewColumn Header="Especialidad"
							DisplayMemberBinding="{Binding Especialidad}"
							Width="auto"/>
					<!-- Especialidad Teléfono -->
					<GridViewColumn Header="Teléfono"
							DisplayMemberBinding="{Binding Telefono}"
							Width="auto"/>

					<GridViewColumn Header="Hace guardia"
							DisplayMemberBinding="{Binding Guardia}"
							Width="auto"/>

					<GridViewColumn Header="Sueldo minimo"
							DisplayMemberBinding="{Binding SueldoMinimoGarantizado}"
							Width="auto"/>
				</GridView>
			</ListView.View>
		</ListView>
		<Button x:Name="buttonModificar"
				IsEnabled="false"
				FontSize="24"
				Content="Modificar seleccionado"
				HorizontalAlignment="Left"
				Height="51"
				Margin="728,210,0,0"
				VerticalAlignment="Top"
				Width="199"
				Click="ButtonModificar"
				RenderTransformOrigin="0.546,3.469"
				BorderBrush="Black"
				Background="White"
				FontFamily="Agency FB"
				Grid.Row="1"/>
		<Button FontSize="24"
				Content="Salir"
				HorizontalAlignment="Left"
				Height="33"
				Margin="750,440,0,0"
				VerticalAlignment="Top"
				Width="145"
				Click="ButtonSalir"
				RenderTransformOrigin="0.546,3.469"
				BorderBrush="Black"
				Background="White"
				FontFamily="Agency FB"
				Grid.Row="1"/>
		<Button FontSize="24"
				Content="Home"
				HorizontalAlignment="Left"
				Height="38"
				Margin="750,397,0,0"
				VerticalAlignment="Top"
				Width="145"
				Click="ButtonHome"
				RenderTransformOrigin="0.546,3.469"
				BorderBrush="Black"
				Background="White"
				FontFamily="Agency FB"
				Grid.Row="1"/>
		<Button FontSize="24"
				Content="Agregar nuevo"
				HorizontalAlignment="Left"
				Height="38"
				Margin="718,148,0,0"
				VerticalAlignment="Top"
				Width="209"
				Click="ButtonAgregar"
				RenderTransformOrigin="0.546,3.469"
				BorderBrush="Black"
				Background="White"
				FontFamily="Agency FB"
				Grid.Row="1"/>
		<!-- DataGrid insertado aquí -->
	</Grid>
</Window>